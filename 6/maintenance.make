; Maintenance
; maintenance.make
; Provides site maintainer level site-management tools.


; Toolbar
  ; Provides a limited administration toolbar for site maintenance.
  projects[toolbar][subdir] =  "contrib"
  projects[toolbar][version] = "2.3"

; Advanced help
  projects[advanced_help][subdir] = "contrib"
  projects[advanced_help][version] = "1.2"

; Backup and Migrate
  projects[backup_migrate][subdir] = "contrib"
  projects[backup_migrate][version] = "2.4"

; Backup and Migrate Files
  projects[backup_migrate_files][subdir] = "contrib"
  projects[backup_migrate_files][version] = "1.x-dev"

; Maintenance Helper
  ; Allows the site maintainer to do maintenance on the site without taking the site down.
  projects[maintenance_helper][subdir] = "contrib"
  projects[maintenance_helper][version] = "1.x-dev"

; Admin Links                     
  ; Provides inline options to edit and delete nodes, see revisions and track changes.
  projects[admin_links][subdir] = "contrib"
  projects[admin_links][version] = "1.8"

; Fast Toggle
  ; Provides inline options to change the published, sticky or promoted status of nodes.
  projects[fasttoggle][subdir] = "contrib"
  projects[fasttoggle][version] = "1.3"

; Cache Actions
  ; Allows the site maintainer to clear Drupal's cache or the cache of a view.
  projects[cache_actions][subdir] = "contrib"
  projects[cache_actions][version] = "1.0"
